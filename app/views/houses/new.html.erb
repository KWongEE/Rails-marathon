<h1>New House Form</h1>
<%= form_for @house do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_area :author %>
  </div>

  <div class="field">
    <%= f.label :source %><br />
    <%= f.text_area :source %>
  </div>
  <div class="field">
    <%= f.label :motto %><br />
    <%= f.text_area :motto %>
  </div>

  <div class="actions">
    <%= f.submit 'Add House'%>
  </div>
<% end %>
